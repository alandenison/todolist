<h1>To Do List</h1>
<ul>
  @foreach (var task in Model)
  {
    <li><a HREF="/tasks/@task.GetId()">@task.GetDescription()</a></li>
  }
</ul>
<p><a href="/tasks/new">Add another task</a></p>
<p><a href="/view_all_tasks">View Completed Tasks</a>
<form action="/tasks_cleared" method="post">
  <button type="submit" name="button">clear all tasks</button>
</form>
